          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const setCookie = pm.response.headers.get('set-cookie');",
                  "if (setCookie) pm.environment.set('session_cookie', setCookie.split(';')[0]);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
