# Copy to `.env` at repo root.
# These values are for local development only.

# Postgres
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/expense_management?schema=public"
# Optional Docker host port mapping for local postgres service in docker-compose.yml.
# Use 5433 (or another free port) when 5432 is already occupied.
POSTGRES_PORT=5432

# API
PORT=4000
CORS_ORIGINS="http://localhost:5173"

# Better Auth
# Generate a stronger secret for shared/staging/prod:
# openssl rand -base64 32
BETTER_AUTH_SECRET="local-dev-only-secret-at-least-32-characters"
BETTER_AUTH_URL="http://localhost:4000"

# Seed (optional)
# Defaults already work for local usage; override only if needed.
SEED_BUDGET_CSV_PATH=".planning/docs/Estimated expenses Mexico - September.csv"
SEED_DEBT_CSV_PATH=".planning/docs/Estimated expenses Mexico - Deuda.csv"
SEED_ACCOUNTS_CSV_PATH=".planning/docs/Estimated expenses Mexico - Cuentas.csv"
# Backward compatible alias for budget CSV:
SEED_CSV_PATH=".planning/docs/Estimated expenses Mexico - September.csv"
SEED_USER_EMAIL="seed@local.dev"
SEED_USER_NAME="Seed User"
SEED_DEBT_START_DATE="2026-09-01"

# Web
VITE_API_URL="http://localhost:4000"
